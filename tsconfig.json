{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["DOM", "ESNext"],
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/*": ["./*"],
      "@api/*": ["api/*"],
      "@screens/*": ["screens/*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@navigator/*": ["navigator/*"],
      "@styles/*": ["styles/*"],
    }
  },
  "extends": "expo/tsconfig.base"
}
